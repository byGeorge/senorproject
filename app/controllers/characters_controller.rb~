class CharactersController < ApplicationController

	def login
	end

	def get_race
		@race
	end

	def post
		
	end

	def show
		
	end

	def preview
		race_id_temp = params[:race][:race_id].to_i
		if random?(race_id_temp)
			@race = Race.where.not(rid: Race.pickme.rid).sample
		else
			@race = Race.find_by_rid(race_id_temp)
		end 
	end

	def random?(obj)
		obj.name == "Random"
	end

	def finish
		
	end
end
